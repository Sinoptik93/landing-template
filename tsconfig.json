{
    "extends": "astro/tsconfigs/base",
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "verbatimModuleSyntax": false,
        "noUnusedParameters": false,
        "resolveJsonModule": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "paths": {
            "~/pages/*": [
                "pages/*"
            ],
            "~/layouts/*": [
                "layouts/*"
            ],
            "~/components/*": [
                "components/*"
            ],
            "~/assets/*": [
                "assets/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
